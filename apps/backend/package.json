{
  "name": "@groei/backend",
  "description": "",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production ENV=development pm2 start --name backend \"deno run -A index.ts\"",
    "test": "ENV=test deno test --allow-env",
    "dev": "NODE_ENV=development ENV=development deno run --allow-net --allow-env --allow-read --allow-ffi --allow-sys --watch index.ts",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:seed": "deno run --allow-env --allow-read --allow-ffi db/seedDatabase.ts",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@groei/common": "*",
    "@hono/hono": "npm:@jsr/hono__hono@^4.6.1",
    "@libsql/client": "^0.14.0",
    "better-sqlite3": "^11.8.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.1",
    "hono": "^4.6.20",
    "idb-keyval": "^6.2.1"
  },
  "devDependencies": {
    "drizzle-kit": "^0.30.4",
    "tsx": "^4.19.2"
  }
}
